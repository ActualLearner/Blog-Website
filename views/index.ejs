<%- include("./partials/header.ejs") %>

    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4"
            src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRCrFOwXMiAfZIgWRslfwvO611SUuhoZ6JrOg&s" alt=""
            width="200" height="200">
        <h1 class="display-5 fw-bold">SimpleBlogs</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Write or read, itâ€™s all the same, fueling the mind with a passionate flame</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a href="#write"><button type="button" class="btn btn-dark btn-lg px-4 gap-3">Write
                        Blog</button></a>
                <a href="#browse"><button type="button" class="btn btn-outline-secondary btn-lg px-4">Read
                        Blogs</button></a>
            </div>
        </div>
    </div>


    <div id="write" class="pt-4 my-5 mx-auto w-50 border border-3 border-black rounded" style="height: 75vh">
        <h1 class="ms-5 mt-4">Write your blog</h1>
        <form action="/" method="POST" class="h-100">
            <div class="my-3 ms-5 me-auto w-75">
                <label for="title" class="form-label">Blog Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Example title">
            </div>
            <div class="my-3 ms-5 me-auto w-75 h-25">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control h-100" id="content" name="content"></textarea>
            </div>

            <input type="submit" class="mt-5 ms-5 mb-3 w-25 btn btn-outline-dark">
        </form>
    </div>


    <div id="browse" class="w-50 mx-auto my-5 p-5">
        <h2>Your Blogs</h2>
        <% if(locals.blogs && locals.blogs.length > 0) { %>
            <ul>
                <% for(let i=blogs.length - 1; i>= 0; i--) { %>
                    <li class="blog-list text-start">
                        <a href="/<%= blogs[i].id %>">
                            <%= blogs[i].title %>
                        </a>
                    </li>
                    <% } %>
            </ul>
            <% } else {%>
                <p>Oops! You haven't written any blogs!</p>
                <% } %>

    </div>

    <%- include("./partials/footer.ejs") %>


